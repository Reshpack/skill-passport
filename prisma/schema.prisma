generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum EvidenceType {
  IMAGE
  FILE
  LINK
}

enum Visibility {
  PRIVATE
  PUBLIC
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  image         String?
  username      String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  profile       Profile?
  skillPosts    SkillPost[]
}

model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  legend    String?  // your “intro legend” text
  headline  String?
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SkillPost {
  id          String     @id @default(cuid())
  userId      String
  title       String
  description String?
  level       SkillLevel @default(BEGINNER)
  dateAchieved DateTime?
  visibility  Visibility @default(PUBLIC)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  evidence    Evidence[]
}

model Evidence {
  id        String      @id @default(cuid())
  skillPostId String
  type      EvidenceType
  url       String      // blob url or link
  caption   String?
  provider  String?     // "vercel_blob" now, "r2" later
  key       String?     // file key/object key if needed later
  createdAt DateTime    @default(now())

  skillPost SkillPost   @relation(fields: [skillPostId], references: [id], onDelete: Cascade)
}